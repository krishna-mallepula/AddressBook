<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inner_content_bg" >

    <TextView
        android:id="@+id/myprofile_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="My Profile Info"
        android:layout_margin="5dip" >
    </TextView>

    <RelativeLayout
        android:id="@+id/myprofile_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@+id/myprofile_info"
        android:background="@drawable/myprofile_bg"
        android:padding="5dp" >

        <TextView
            android:id="@+id/myprofile_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            android:padding="3dp"
            android:text="My Profile"
            android:textColor="@color/dark_orange"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/firstname_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myprofile_label"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="First Name"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/firstnameprofile_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/myprofile_label"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/paymenttextbox"
            android:ellipsize="end"
            android:ems="4"
            android:imeOptions="actionNext"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/input_text_color"
            android:textColorHint="@color/gray_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/lastname_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstnameprofile_txt"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Last Name"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/lastname_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/firstnameprofile_txt"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/paymenttextbox"
            android:ellipsize="end"
            android:ems="4"
            android:imeOptions="actionNext"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/input_text_color"
            android:textColorHint="@color/gray_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/emailid_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lastname_txt"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Email ID"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/emailid_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/lastname_txt"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/paymenttextbox"
            android:ellipsize="end"
            android:ems="4"
            android:imeOptions="actionNext"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/input_text_color"
            android:textColorHint="@color/gray_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/gender_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailid_txt"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Gender"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/genderspinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/emailid_txt"
            android:layout_below="@+id/emailid_txt"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/spinnerselector"
            android:padding="1dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dob_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/genderspinner"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Date Of Birth"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/dob_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/emailid_txt"
            android:layout_below="@+id/genderspinner"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/dateofbirth_textbox"
            android:drawableRight="@drawable/calender_icon"
            android:editable="false"
            android:ellipsize="end"
            android:ems="4"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:longClickable="false"
            android:singleLine="true"
            android:textColor="@color/input_text_color"
            android:textColorHint="@color/gray_color"
            android:textSize="14sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/myaccount_info_txt"
        android:layout_centerHorizontal="true"
        android:text="Edit Profile" />

</RelativeLayout>