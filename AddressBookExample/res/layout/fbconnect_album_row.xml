<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/image_bg"
        android:padding="2dp" >


        <ImageView
            android:id="@+id/fbconnect_album_image"
            android:layout_width="67dip"
            android:layout_height="67dip"
            android:layout_gravity="center_vertical"
            android:clickable="false"
            android:scaleType="centerCrop"
            android:src="@drawable/newphoto" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.7"
        android:clickable="false"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fbconnect_album_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:maxWidth="150dip"
            android:singleLine="true"
            android:text="Album Name"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fbconnect_album_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="(Counts)"
            android:textColor="#747474"
            android:textSize="17sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/multiplecouponarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:background="@drawable/arrowbutton"
        android:clickable="false"
        android:gravity="right" />

</LinearLayout>